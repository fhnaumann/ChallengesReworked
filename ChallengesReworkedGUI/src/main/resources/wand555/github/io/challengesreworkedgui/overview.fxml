<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wand555.github.io.challengesreworkedgui.controllers.OverviewController">
   <children>
      <VBox>
         <children>
            <StackPane alignment="CENTER_LEFT">
               <children>
                  <HBox spacing="10">
                     <children>
                        <Button fx:id="exportButton" mnemonicParsing="false" onAction="#onExport" text="Export" />
                        <Button fx:id="loadButton" mnemonicParsing="false" onAction="#onImport" text="Import" />
                     </children>
                  </HBox>
               </children>
            </StackPane>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="25.0">
               <children>
                  <fx:include fx:id="challengesOverview" source="challenges/challenges_overview.fxml" resources="wand555/github/io/challengesreworkedgui/lang_challenges" charset="utf-8"/>
                  <Separator orientation="VERTICAL" prefHeight="200.0" />
                  <fx:include fx:id="goalsOverview" source="goals/goal_overview.fxml" resources="wand555/github/io/challengesreworkedgui/lang_goals"/>
                  <Separator orientation="VERTICAL" prefHeight="200.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
